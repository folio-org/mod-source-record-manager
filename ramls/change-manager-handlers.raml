#%RAML 1.0

title: Source Record Storage event handlers API
version: v0.1
protocols: [ HTTP, HTTPS ]
baseUri: http://localhost

documentation:
  - title: Source Record Manager event handlers API
    content: API for event handling

types:
  errors: !include raml-storage/raml-util/schemas/errors.schema
  dataImportEventPayload: !include raml-storage/schemas/common/dataImportEventPayload.json


traits:
  validate: !include raml-storage/raml-util/traits/validation.raml

/change-manager/handlers:
  /created-inventory-instance:
    description: "Handler for DI_INVENTORY_INSTANCE_CREATED event."
    post:
      body:
        application/json:
          type: string
      responses:
        204:
  /processing-result:
    description: "Handler for DI_COMPLETED and DI_ERROR events."
    post:
      body:
        application/json:
          type: string
      responses:
        204:
