{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Job Monitoring Schema",
  "type": "object",
  "properties": {
    "id": {
      "description": "UUID",
      "$ref": "raml-storage/schemas/common/uuid.json"
    },
    "jobExecutionId": {
      "description": "Corresponding jobExecution id",
      "$ref": "raml-storage/schemas/common/uuid.json"
    },
    "lastEventTimestamp": {
      "description": "Date and time when the last event occurred",
      "type": "string",
      "format": "date-time"
    },
    "notificationSent": {
      "description": "Indicates whether notification sent or not",
      "type": "boolean"
    }
  }
}